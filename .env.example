# Medusa Bot Enhanced - Environment Variables Template
# Copy this file to .env and fill in your values

# ================================
# TELEGRAM BOT CONFIGURATION
# ================================
API_ID=your_api_id
API_HASH=your_api_hash
BOT_TOKEN=your_bot_token
OWNER=your_telegram_user_id
OWNER_USERNAME=@yourusername

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/medusa_bot

# ================================
# USER AUTHORIZATION
# ================================
# Comma-separated list of authorized user IDs
AUTH_USERS=123456789,987654321

# Comma-separated list of authorized channel IDs
CHANNELS=-1001234567890,-1009876543210

# ================================
# LOG CHANNEL CONFIGURATION
# ================================
# Primary log channels (comma-separated)
LOG_CHANNELS=-1001111111111,-1002222222222

# Backup log channels (comma-separated)
BACKUP_LOG_CHANNELS=-1003333333333

# ================================
# FILE HANDLING SETTINGS
# ================================
# Maximum file size in MB (Telegram limit is 2000MB)
MAX_FILE_SIZE_MB=2000

# Download timeout in seconds
DOWNLOAD_TIMEOUT=3600

# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=5

# Chunk size for file operations (in bytes)
CHUNK_SIZE=1048576

# ================================
# RETRY CONFIGURATION
# ================================
# Number of retry attempts for failed downloads
RETRY_ATTEMPTS=3

# Delay between retries in seconds
RETRY_DELAY=2

# ================================
# RATE LIMITING
# ================================
# Maximum downloads per user per hour
MAX_DOWNLOADS_PER_USER_PER_HOUR=50

# Maximum downloads per user per day
MAX_DOWNLOADS_PER_USER_PER_DAY=200

# ================================
# QUALITY SETTINGS
# ================================
# Default video quality
DEFAULT_VIDEO_QUALITY=720

# Available quality options (comma-separated)
AVAILABLE_QUALITIES=144,240,360,480,720,1080

# ================================
# FEATURE FLAGS
# ================================
# Enable analytics tracking
ENABLE_ANALYTICS=true

# Enable download history
ENABLE_DOWNLOAD_HISTORY=true

# Enable progress tracking
ENABLE_PROGRESS_TRACKING=true

# Enable automatic file cleanup
ENABLE_AUTO_CLEANUP=true

# ================================
# FILE PATHS
# ================================
# Path to YouTube cookies file
COOKIES_FILE_PATH=youtube_cookies.txt

# ================================
# REDIS CONFIGURATION (Optional)
# ================================
# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379/0

# ================================
# MONITORING (Optional)
# ================================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn

# Prometheus metrics port
PROMETHEUS_PORT=8000

# ================================
# DEPLOYMENT SETTINGS
# ================================
# Port for web server (if using webhook)
PORT=8000

# Webhook URL (if using webhook mode)
WEBHOOK_URL=https://yourdomain.com/webhook

# ================================
# ADVANCED SETTINGS
# ================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum log file size in MB
MAX_LOG_SIZE_MB=50

# Number of log files to keep
LOG_BACKUP_COUNT=5

# Timezone for timestamps
TIMEZONE=UTC

# ================================
# EXTERNAL API TOKENS (Optional)
# ================================
# Add your external API tokens here if needed
# EXTERNAL_API_TOKEN=your_token_here
